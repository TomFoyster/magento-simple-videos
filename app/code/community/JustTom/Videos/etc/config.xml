<?xml version="1.0"?>
<config>
    <modules>
        <JustTom_Videos>
            <version>0.0.2</version>
        </JustTom_Videos>
    </modules>
    <global>
        <blocks>
            <justtom_videos>
                <class>JustTom_Videos_Block</class>
            </justtom_videos>
        </blocks>
        <helpers>
            <justtom_videos>
                <class>JustTom_Videos_Helper</class>
            </justtom_videos>
        </helpers>
        <resources>
            <justtom_videos_setup>
                <setup>
                    <module>JustTom_Videos</module>
                </setup>
            </justtom_videos_setup>
        </resources>
    </global>
    <frontend>
        <layout>
            <updates>
                <justtom_videos>
                    <file>justtom/videos.xml</file>
                </justtom_videos>
            </updates>
        </layout>
        <product>
            <collection>
                <attributes>
                    <enable_video/>
                    <youtube_url_code/>
                    <video_width/>
                    <video_height/>
                    <placeholder_image/>
                    <schema_name/>
                    <schema_description/>
                    <schema_duration_minutes/>
                    <schema_duration_seconds/>
                </attributes>
            </collection>
        </product>
    </frontend>
    <phpunit>
        <suite>
            <modules>
                <JustTom_Videos/>
            </modules>
        </suite>
    </phpunit>
</config>